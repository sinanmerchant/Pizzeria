<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.smproj4.StoreOrdersTabController" spacing="10" alignment="CENTER">
    <Label text="Store Orders" style="-fx-font-size: 20px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Order Number:"/>
        <ComboBox fx:id="orderNumberComboBox"/>
        <Label text="Order Total:"/>
        <TextField fx:id="orderTotalField" editable="false"/>
    </HBox>

    <ListView fx:id="orderDetailsList" prefHeight="300"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel Order" onAction="#handleCancelOrder"/>
        <Button text="Export Orders" onAction="#handleExportOrders"/>
    </HBox>
</VBox>
